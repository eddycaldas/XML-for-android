<!-- For list items (image and 3 texts on side) -->
<!-- image on left and three texts on the right of image  -->
<!-- with each text under each other -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ocean" />

    <TextView
        android:id="@+id/PebbleBeach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pebble Beach"
        android:layout_toRightOf="@id/image_view"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/california"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="California"
        android:layout_toRightOf="@id/image_view"
        android:layout_below="@id/PebbleBeach"
        android:textAppearance="?android:textAppearanceSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 miles away"
        android:layout_toRightOf="@id/image_view"
        android:layout_below="@id/california"
        android:textAppearance="?android:textAppearanceSmall" />

</RelativeLayout>



